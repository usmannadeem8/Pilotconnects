@model IEnumerable<Zealous.Models.DB.Airports>

@{
    ViewData["Title"] = "Airports";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}




<style>
    table {
        width: 100%;
    }

    #example_filter {
        float: right;
    }

    #example_paginate {
        float: right;
    }

    label {
        display: inline-flex;
        margin-bottom: .5rem;
        margin-top: .5rem;
    }
</style>

<div class="sb2-2-2">
    <ul>
        <li>
            <a href="#"><i class="fa fa-home" aria-hidden="true"></i> Home</a>
        </li>
        <li class="active-bre">
            <a href="#"> All Airports</a>
        </li>
    </ul>
</div>
<div class="sb2-2-3">
    <div class="row">
        <div class="col-md-12">
            <div class="box-inn-sp">
                <div class="inn-title">
                    <h4>All Airports</h4>

                    <!-- Dropdown Structure -->

                </div>
                <div class="tab-inn">
                    <div class="table-responsive table-desi">
                        <div class="container">
                            <div class="row">

                                <table id="example" class="table table-striped table-bordered" style="width:100%">
                                    <thead>
                                        <tr>
                                            <th>
                                                Airport Location Id
                                            </th>
                                            <th>
                                                Airport Location Latitude
                                            </th>
                                            <th>
                                                Airport Location Longitude
                                            </th>
                                            <th>
                                                State
                                            </th>
                                            <th>

                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Airport)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Lat)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Lang)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.State)
                                            </td>
                                            <td>
                                                <a asp-action="Edit" asp-route-id="@item.Id"><i class="fa fa-edit bg-success" aria-hidden="true"></i></a>
                                                <a asp-action="Delete" asp-route-id="@item.Id"><i class="fa fa-trash-o bg-danger" aria-hidden="true"></i></a>
                                            </td>
                                        </tr>
                                        }

                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



