@model IEnumerable<Zealous.Models.DB.Flight>
@using Zealous.Helper;
@{
    ViewData["Title"] = "Bookings";
    Layout = "~/Views/Shared/_PilotLayout.cshtml";
}

<style>
    table {
        width: 100%;
    }

    #example_filter {
        float: right;
    }

    #example_paginate {
        float: right;
    }

    label {
        display: inline-flex;
        margin-bottom: .5rem;
        margin-top: .5rem;
    }
</style>

<div class="sb2-2-2">
    <ul>
        <li>
            <a href="#"><i class="fa fa-home" aria-hidden="true"></i> Home</a>
        </li>
        <li class="active-bre">
            <a href="#"> My Booking</a>
        </li>
    </ul>
</div>
<div class="sb2-2-3">
    <div class="row">
        <div class="col-md-12">
            <div class="box-inn-sp">
                <div class="inn-title">
                    <h4>My Bookings</h4>

                    <!-- Dropdown Structure -->

                </div>
                <div class="tab-inn">
                    <div class="table-responsive table-desi">
                        <div class="container">
                            <div class="row">

                                <table id="example" class="table table-striped table-bordered" style="width:100%">
                                    <thead>
                                        <tr>
                                            <th>
                                                Flight To
                                            </th>
                                            <th>
                                                Departure Airport
                                            </th>
                                            <th>
                                                Destination Airport
                                            </th>
                                            <th>
                                                Total Seats
                                            </th>

                                            <th>
                                                Cost Of Flight
                                            </th>
                                            <th>
                                                Usuable Weight Available
                                            </th>
                                            <th>
                                                Date Of Flight
                                            </th>



                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.FlightTo)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.DepartureAirportNavigation.Airport)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.DestinationAirportNavigation.Airport)
                                                </td>
                                                <td>
                                                    @{ var TotalSeats = item.TotalLeftSeats + item.TotalRearSeats + item.TotalRightSeats;} @TotalSeats
                                                </td>

                                                <td>
                                                    $@Html.DisplayFor(modelItem => item.CostOfFlight)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.UsuableWeightAvailable) lbs Pounds
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.DateOfFlight)
                                                </td>

                                                <td>
                                                    <a href="@Url.Action("Index","Bookings",new {EBID=Helper.Encrypt(item.Id.ToString()) })"><i class="fa fa-detail bg-info" aria-hidden="true">Bookings</i></a>

                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

