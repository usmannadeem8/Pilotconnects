@model IEnumerable<Zealous.Models.DB.Booking>

@{
    ViewData["Title"] = "Booking Detail";
    Layout = "~/Views/Shared/_pilotLayout.cshtml";
    var count = 0;
}

<style>
    table {
        width: 100%;
    }

    #example_filter {
        float: right;
    }

    #example_paginate {
        float: right;
    }

    label {
        display: inline-flex;
        margin-bottom: .5rem;
        margin-top: .5rem;
    }
</style>

<div class="sb2-2-2">
    <ul>
        <li>
            <a href="#"><i class="fa fa-home" aria-hidden="true"></i> Home</a>
        </li>
        <li class="active-bre">
            <a href="#"> Booking Details</a>
        </li>
    </ul>
</div>
<div class="sb2-2-3">
    <div class="row">
        <div class="col-md-12">
            <div class="box-inn-sp">
                <div class="inn-title">
                     
                    <h4>@ViewBag.FlightTitle</h4>

                    <!-- Dropdown Structure -->

                </div>
                <div class="tab-inn">
                    <div class="table-responsive table-desi">
                        <div class="container">
                            <div class="row">

                                <table id="example" class="table table-striped table-bordered" style="width:100%">
                                    <thead>
                                        <tr>
                                            <th>No</th>
                                            <th>Full Name</th>
                                            <th>Mobile</th>
                                            <th>Email</th>
                                            <th>No Of Seats</th>                                            
                                            <th>Price</th>
                                            <th>Status</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                        <tr>
                                            <td>@{count = count + 1;}@count</td>
                                            <td>@item.Member.FirstName @item.Member.LastName</td>
                                            <td>@item.Member.PhoneNumber</td>
                                            <td>@item.Member.Email</td>
                                            <td>@{var Total = item.LeftSeat + item.RearSeat + item.RightSeat;} @Total</td>
                                          
                                            <td>$@item.TotalCost</td>
                                            <td>
                                                @if (item.Status == 0)
                                                {


                                                    <span class="db-not-done">Pending</span>

                                                }
                                                else if (item.Status == 1)
                                                {
                                                    <span class="label label-success" >Confirmed</span>
                                                }
                                                else if (item.Status == 2)
                                                {
                                                    <span class="db-declined">Declined</span>
                                                }

                                            </td>

                                        </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

