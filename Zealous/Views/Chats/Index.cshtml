<script>

    function SendMessage() {
        var Rece = $("#receiver").val();
        var email = $("#message").val();
        if (email == "") {

            return false;
        }
        else {
            $.ajax({
                url: "/Chats/SendMessage?Message=" + email + "&ReceiverId=" + Rece,
                type: "POST",
                contentType: "application/json",
                dataType: "json",
                success: function (data) {

                    GetMessages(Rece, 1);
                },

                error: function (e) {
                    //location.reload();
                }
            });
        }

        return false;
    }
</script>


