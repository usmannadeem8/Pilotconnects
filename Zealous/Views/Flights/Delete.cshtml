@model Zealous.Models.DB.Flight

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_PilotLayout.cshtml";
}

<div class="sb2-2-2">
    <ul>
        <li>
            <a href="#"><i class="fa fa-home" aria-hidden="true"></i> Home</a>
        </li>
        <li class="active-bre">
            <a href="#"> Delete</a>
        </li>
    </ul>
</div>
<div class="sb2-2-3">
    <div class="row">
        <div class="col-md-12">
            <div class="box-inn-sp">
                <div class="inn-title">
                    <h4>Are you sure you want to delete this?</h4>

                    <!-- Dropdown Structure -->

                </div>
                <div class="tab-inn">
                    <div class="table-responsive table-desi">
                        <div class="container">
                            <div class="row">

                                <table class="table table-striped table-bordered" style="width:100%">
                                    <thead>
                                        <tr>
                                            <th>
                                                Flight To
                                            </th>
                                            <th>
                                                Departure Airport
                                            </th>
                                            <th>
                                                Destination Airport
                                            </th>
                                            <th>
                                                Left Seats
                                            </th>
                                            <th>
                                                Right Seats
                                            </th>
                                            <th>
                                                Rear Seats
                                            </th>
                                            <th>
                                                Cost Of Flight
                                            </th>
                                            <th>
                                                Usuable Weight Available
                                            </th>
                                            <th>
                                                Date Of Flight
                                            </th>



                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(model => model.FlightTo)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(model => model.DepartureAirportNavigation.Airport)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(model => model.DestinationAirportNavigation.Airport)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(model => model.NumberOfLeftSeats)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(model => model.NumberOfRightSeats)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(model => model.NumberOfRearSeats)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(model => model.CostOfFlight)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(model => model.UsuableWeightAvailable)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(model => model.DateOfFlight)
                                            </td>
                                            <td>
                                                <form asp-action="Delete">
                                                    <input type="hidden" asp-for="Id" />
                                                    <input type="submit" value="Delete" class="btn btn-default" /> 
                                                    
                                                </form>
                                            </td>
                                        </tr>


                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

